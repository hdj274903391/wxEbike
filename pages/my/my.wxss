
.myinfo{
  width: 100%;
  height: 100%;
  }
.myinfotop{
  height: 160px;
  background: #f8fff5;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.userphoto{
  width:75px;
  height: 75px;
  border-radius: 75px;
  background: white;
}
.userphotoright{
  margin-top: 10px;
  margin-left: 12px;
}
.userphone{
  font-size: 15px;
  }
.score{
  width: 75px;
  height: 20px;
  background: #5ac72f;
  border-radius: 45px;
  font-size: 12px;
  line-height: 20px;
  text-align: center;
  margin-top: 10px;
  color: white;
  }
  .listItem{
  height: 60px;
  padding-left: 20px;
  display: flex;
  align-items: center;
  padding-right: 20px;
  justify-content: space-between;
  font-size: 15px;
  }
  .listItem:after{
    border: 0
  }
.listtitle{display: flex;align-items: center;}
.listtitleIcon{
 font-size: 20px;
  margin-right:5px; 
}
.attention{
  display: block;
  width: 18px;
  height: 18px;
  background: red;
  color: white;
  line-height: 18px;
  text-align: center;
  font-size: 12px;
  border-radius: 50%;
}
.detail{
  color:#999;
  font-size: 12px;
  display: flex;
  align-items: center;
  height: 60px;
  line-height: 60px;
}
.detail>test:nth-child(2){
  margin-left: 10px;
}
.arrow{
  width: 8px;
  height: 8px;
  border-top: 1px solid #999;
  border-right: 1px solid #999;
  transform: rotate(45deg);
  display: inline-block;
  margin-left: 5px;
}
.myinfobottom{
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 40px;
  width: 100%; 
  font-size: 15px;
  margin-top:15px;
}
.myinfobottomItem{
  display: flex;
  align-items: center;
  width: 92px;
  justify-content: space-between;
  color: #979797;
}
.ft20{
  font-size: 20px;
}
