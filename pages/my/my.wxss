.customService{
  z-index: 10;
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  background: rgba(99,99,99,.5);
  display: flex;
  justify-content: center;
  align-items: center;
}
.serviceContent{
  width: 84%;
  height: 240px;
  border-radius: 5px;
  background: white;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.serviceContentTop{
  width: 100%;
  height: 57%;
}
.serviceTittle{
  font-size: 12px;
  height: 55px;
  line-height: 55px;
  color: #969696;
  margin-top: 5px;
}
.serviceList{
  width: 95%;
  height: 140px;
white-space: pre-wrap;
margin-top: 15px;
}
.serviceItem{
 font-size: 12px;
 display: inline-block;
 height: 55px;
 width: 50%;
