<!--pages/set/set.wxml-->
<view class='container'>
  <view class='top bottom'>
    <view>
      <view class='phone'>{{userInfo.memberName}}</view>
       <view class='score'>积分 {{userInfo.score}}</view> 
    </view>
    <view class='userImg'>
      <image src="{{userInfo.memberAvatarPath}}"></image>
    </view>
  </view>
  <view class='list' bindtap='handleToModifyNickName'>
   <text style="margin-right:0;">昵称</text>
   <view>
     <text style='margin-right:0;'>{{userInfo.memberName}}</text>
    <view class='detail'></view>
   </view>
   
  </view>
  <view class='list'>
   <text>姓名</text>
   <view style='margin-right:20px'>
     <text>未填写</text>
   </view>
  </view>
  <view class='list'>
   <text>实名认证</text>
   <view style='margin-right:20px'>
     <text>未认证</text>
   </view>
  </view>
  <view class='nullView'></view>
  <view class='list'>
   <text>手机号</text>
    <view style='margin-right:20px'>
     <text>{{userInfo.phoneNumber}}</text>
   </view>
  </view>
  <view class='list'>
   <text>微信</text>
  <view>
     <text style='margin-right:0;'>{{nickName}}</text>
    <view class='detail'></view>
  </view>
  </view>

  

  
</view>


