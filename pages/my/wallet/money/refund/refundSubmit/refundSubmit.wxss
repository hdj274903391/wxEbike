page{
  background: #f0f0f0;
  position: relative;
}
.content{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 15px;
  color: #959595;
  background: white;
  border-top: 1px solid #f0f0f0;
}
.textarea{
  margin-top:20px;
  width: 94%;
  height: 190px;
  color: black;
}
.scanView{
  width: 100%;
  height: 45px;
  border-top: 10px solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between
}
.scanView>view{
  margin: 0 15px;
}
.submitBtn{
  width: 180px;
  height: 45px;
  border-radius: 45px;
  text-align: center;
  line-height: 45px;
  background: #5ac72f;
  color: white;
  font-size: 18px;
  position: relative;
  margin:30px auto;
}